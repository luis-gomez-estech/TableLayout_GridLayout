<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/fondo7"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:background="#A4E7E4E4"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relative1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/icon_menu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/cerrar" />


            <TextView

                android:id="@+id/clear"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_alignParentEnd="true"
                android:text="@string/clear"
                android:textColor="#000"
                android:gravity="right"/>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relative_botones"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center">

            <TextView

                android:id="@+id/mes_anterior"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:text="Wed"
                android:textColor="#000"
                android:gravity="left"/>

            <TextView

                android:id="@+id/dia_mes_anterior"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mes_anterior"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:text="13 oct"
                android:textColor="#000"
                android:gravity="left"/>


            <TextView

                android:id="@+id/mes_posterior"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_alignParentEnd="true"
                android:text="Sat"
                android:textColor="#000"
                android:gravity="right"/>

            <TextView

                android:id="@+id/dia_mes_posterior"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mes_posterior"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_alignParentEnd="true"
                android:text="15 Oct"
                android:textColor="#000"
                android:gravity="right"/>

        </RelativeLayout>

    </LinearLayout>


